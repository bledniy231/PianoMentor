<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="KeyboardButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_margin">2dp</item>
        <item name="cornerRadius">5dp</item>

    </style>

    <style name="KeyboardKeyWhite" parent="KeyboardButton">
        <item name="rippleColor">@color/transparent</item>
        <item name="android:foreground">@drawable/selectable_piano_white_item</item>
    </style>

    <style name="KeyboardKeyBlack" parent="KeyboardButton">
        <item name="android:backgroundTint">@color/black</item>
        <item name="layout_constraintWidth_percent">0.08</item>
        <item name="rippleColor">@color/dark_gray</item>
        <item name="android:foreground">@drawable/selectable_piano_black_item</item>
    </style>

</resources>