<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_menu_recycler_view_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:backgroundTint="@color/ultra_light_purple"
    app:cardCornerRadius="20dp"
    android:layout_marginVertical="10dp"
    android:clickable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/main_menu_recycler_view_purple_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/circle_drawable"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/main_menu_recycler_view_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/icon_cources"
            app:tint="@color/white"
            app:layout_constraintStart_toStartOf="@+id/main_menu_recycler_view_purple_circle"
            app:layout_constraintEnd_toEndOf="@+id/main_menu_recycler_view_purple_circle"
            app:layout_constraintTop_toTopOf="@+id/main_menu_recycler_view_purple_circle"
            app:layout_constraintBottom_toBottomOf="@+id/main_menu_recycler_view_purple_circle" />

        <TextView
            android:id="@+id/main_menu_recycler_view_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:ellipsize="end"
            android:maxLines="2"
            app:layout_constrainedWidth="true"
            app:layout_constraintWidth_percent="0.65"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/main_menu_recycler_view_purple_circle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Курсы"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>